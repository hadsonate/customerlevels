<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/customerlevels/customers/:customerId/tierlevel" method="GET">
        <service class="Vendor\CustomerLevels\Api\CustomerOrderCountRepositoryInterface" method="determineTierLevelByCustomer"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/customerlevels/customers/:increment/tierlevelbyincrement" method="GET">
        <service class="Vendor\CustomerLevels\Api\CustomerOrderCountRepositoryInterface" method="determineTierLevelByIncrement"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/customerlevels/customers/increment" method="POST">
        <service class="Vendor\CustomerLevels\Api\CustomerOrderCountRepositoryInterface" method="incrementCustomerOrderCount"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
